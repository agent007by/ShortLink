<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Укоротить ссылку", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Ваши ссылки", "ShortLinksStatistics", "Home", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="bodyContent">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - специально для Тинькофф.ру</p>
        </footer>
    </div>
    @*ToDo подключить Бандлы с обьединением и минификацией*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockout")

    @Scripts.Render("~/bundles/app/master")
    @RenderSection("scripts", required: false)
</body>
</html>
